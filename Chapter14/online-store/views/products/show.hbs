{{#> app}}
  {{#*inline "content"}}
    {{#with viewData.product}}
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/img/{{image}}" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              {{name}} (${{price}})
            </h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text"><small class="text-muted">Add to Cart</small></p>
          </div>
        </div>
      </div>
    </div>
    {{/with}}
  {{/inline}}
{{/app}}
