{{#> app}}
  {{#*inline "content"}}
    <div class="row">
      {{#each viewData.products}}
      <div class="col-md-4 col-lg-3 mb-2">
        <div class="card">
          <img src="/img/{{image}}" class="card-img-top img-card">
          <div class="card-body text-center">
            <a href="/products/{{id}}" class="btn bg-primary text-white">{{name}}</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  {{/inline}}
{{/app}}
